{
  "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "__DEBUG__": true,
    "__PRODUCTION__": true,
    "k3": true,
    "waffle": true,
    "React": true,
    "dataLayer": true,
    "ga": true,
    "gaData": true
  },
  "plugins": ["react"],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.babel.js"
      }
    },
    "extensions": [".js", ".jsx"],
    "paths": ["./src/", "./js-src/", "./js-src/js/"],
    "import/ignore": ["node_modules", "\\.(scss|css|svg|json)$"],
    "react": {
      "createClass": "createClass",
      "pragma": "React",
      "version": "16.0"
    }
  },
  "rules": {
    "strict": 0,
    "camelcase": "off",
    "comma-dangle": [2, "always-multiline"],
    "id-length": 0,
    "new-cap": [2, { "capIsNewExceptions": ["AND"] }],
    "no-multiple-empty-lines": [2, { "max": 1 }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/sort-comp": 0,
    "react/prefer-stateless-function": [0, { "ignorePureComponents": true }],
    "react/forbid-prop-types": [0, { "forbid": [] }],
    "react/jsx-pascal-case": [2, { "allowAllCaps": true }],
    "react/no-find-dom-node": 1,
    "react/jsx-no-bind": [2, { "ignoreRefs": true }],
    "import/no-extraneous-dependencies": [2, { "devDependencies": true }],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["to"]
      }
    ],
    "jsx-a11y/label-has-for": [2, { "required": { "every": ["id"] } }]
  }
}
